extends ../layout
block vars
    - var userId = userId 
    - var isUser = isUser 
    - var isOwner = isOwner

block content
    h1.title-new-project NEW PROJECT
    if error 
        p(class="error", style="color:red;")= error 
    form.form-create-project(action="/projects/create", method="post")
        label.label-name-createproject(for="name") Name
        input(type="text", name="name", id="name")
        label.label-description-createproject(for="description") Description
        textarea(name="description", cols="30", rows="10", id="description")
        label.label-start-createproject(for="start_date") Start Date
        input(type="date", name="start_date", id="start_date")
        label.label-end-createproject(for="end_date") End Date
        input(type="date", name="end_date", id="end_date")
        input.submit-create(type="submit", value="CREATE NEW PROJECT")
    